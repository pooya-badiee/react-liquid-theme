{
  "name": "react-liquid-theme",
  "files": ["dist", "bin"],
  "scripts": {
    "format": "biome format --write",
    "lint": "biome lint --unsafe --write",
    "build": "rollup -c rollup.config.mjs"
  },
  "bin": {
    "react-liquid-theme": "bin/react-liquid-theme.js"
  },
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1",
    "@rollup/plugin-typescript": "^12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/yargs": "^17",
    "react": "^19",
    "react-dom": "^19",
    "rollup": "^4.40.2",
    "tslib": "~2.8",
    "typescript": "~5.8"
  },
  "dependencies": {
    "@swc/core": "^1",
    "chalk": "^4",
    "chokidar": "^4",
    "dedent": "^1",
    "glob": "^11",
    "rolldown": "^1.0.0-beta.7",
    "rollup-plugin-swc3": "^0.12.1",
    "yargs": "^17"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19",
    "typescript": ">=5.8"
  }
}
