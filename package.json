{
  "name": "react-liquid-theme",
  "description": "A tool for generating shopify .liquid theme files from React components.",
  "keywords": ["react", "liquid", "theme", "shopify"],
  "repository": {
    "type": "git",
    "url": "https://github.com/pooya-badiee/react-liquid-theme.git"
  },
  "license": "MIT",
  "files": ["dist"],
  "version": "0.5.0",
  "scripts": {
    "format": "biome format",
    "lint": "biome lint",
    "format:fix": "biome format --write",
    "lint:fix": "biome lint --unsafe --write",
    "build": "rollup -c rollup.config.mjs",
    "test": "vitest run"
  },
  "bin": {
    "react-liquid-theme": "dist/cli.js"
  },
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./declarations": {
      "types": "./dist/declarations.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "declarations": ["./dist/declarations.d.ts"]
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1",
    "@rollup/plugin-typescript": "^12",
    "@rollup/pluginutils": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/yargs": "^17",
    "react": "^19",
    "react-dom": "^19",
    "sass": "^1",
    "tslib": "~2.8",
    "typescript": "~5.8",
    "vitest": "^3"
  },
  "dependencies": {
    "zod": "^3",
    "@rollup/plugin-commonjs": "^28",
    "@rollup/plugin-node-resolve": "^16",
    "@rollup/plugin-replace": "^6",
    "@shopify/prettier-plugin-liquid": "^1",
    "@swc/core": "^1",
    "chalk": "^4",
    "chokidar": "^4",
    "dedent": "^1",
    "glob": "^11",
    "postcss": "^8",
    "postcss-modules": "^6",
    "prettier": "^3",
    "rollup": "^4",
    "rollup-plugin-swc3": "^0.12.1",
    "rollup-plugin-tsconfig-paths": "^1",
    "yargs": "^17",
    "dotenv": "^16"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19",
    "sass": ">=1",
    "typescript": ">=5.8"
  },
  "engines": {
    "node": ">=20"
  }
}
